<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/day_or_night"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="4dp"
              android:textAppearance="?attr/textAppearanceListItem"
              android:textStyle="bold"
        tools:text="Sunday Night"/>

    <TextView
        android:id="@+id/forecast_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        tools:text="Thunderstorms likely in the evening. Then the chance of scattered thunderstorms later on. Low 72F. Winds SW at 10 to 20 mph. Chance of rain 80%."/>

</LinearLayout>